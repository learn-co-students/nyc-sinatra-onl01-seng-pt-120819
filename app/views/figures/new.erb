<h2>Create New Figure</h2>

<form action='/figures' method="post">
<label>Figure Name:</label>
<input type="text" id="figure_name" name="figure[name]" ><br>

<label>Titles</label><br>
<%@titles.each do |title|%>
<%=title.name%>
<input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>">
<%end%><br>
<label>Create New Title:</label><br>
<label>Title Name</label><br>
<input type="text" name="title[name]" id="new_title"><br>

<label>Landmarks</label><br>
<%@landmarks.each do |landmark|%>
<%=landmark.name%>
<input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>">
<%end%><br>

<label>Create New Landmark:</label><br>
<label>Landmark Name</label><br>
<input type="text" name="landmark[name]" id="new_landmark"><br>
<label>Landmark Year</label>
<input type="text" name="landmark[year_completed]" id="landmark_year_completed">
<input type="submit" value="Create New Figure" id="create_figure">
</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
